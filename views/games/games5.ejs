<!DOCTYPE html>
<html>
<head>
    <title>Guided Meditation</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="mb-4">Guided Meditation</h1>
        <p class="lead">Follow the guided meditation instructions.</p>
        <div id="meditation" class="mt-4">
            <button class="btn btn-primary btn-lg mb-3" onclick="startMeditation()">Start Meditation</button>
            <div id="instructions" class="mt-3 font-weight-bold" style="font-size: 24px;"></div>
        </div>
    </div>
    <!-- using inline JSON DATA -->
    <script>
        const meditationSteps = [
            'Close your eyes and take a deep breath.',
            'Exhale slowly and feel the tension leaving your body.',
            'Focus on your breathing. Inhale... Exhale...',
            'Let your mind clear and drift to a peaceful place.',
            'Stay in this moment for a few minutes...'
        ];
        let meditationIndex = 0;

        function startMeditation() {
            meditationIndex = 0;
            document.getElementById('instructions').innerText = meditationSteps[meditationIndex];
            const intervalId = setInterval(() => {
                if (meditationIndex < meditationSteps.length - 1) {
                    meditationIndex++;
                    document.getElementById('instructions').innerText = meditationSteps[meditationIndex];
                } else {
                    clearInterval(intervalId);
                }
            }, 5000);
        }
    </script>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>
