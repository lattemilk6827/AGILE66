<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soothing Sounds</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
            body {
    background-color: #f8c990;
    color: rgb(32, 5, 62);
}

        .sound-card {
            cursor: pointer;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            background-color: rgba(252, 160, 203, 0.8); 
        }
        .container {
            position: relative;
            text-align: center;
        }
        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Stay in the back */
            opacity: 0.6; /* Slightly see through */
            background-size: cover;
            background-position: center;
        }
 
    </style>
    
</head>
<body>
    <div id="bgImage" class="background-image"></div>
    <div class="container vh-100">
        <h1>Soothing Sounds</h1>
        <p>Do your favourite activities with these sounds in the background</p>
        <div class="row justify-content-center align-items-center h-75">
            <div class="col-md-4 sound-card" onclick="changeSound('ocean')">Ocean Waves</div>
            <div class="col-md-4 sound-card" onclick="changeSound('rain')">Rain</div>
            <div class="col-md-4 sound-card" onclick="changeSound('forest')">Forest</div>
        </div>
          <!-- Progress Bar -->
    <div class="progress mt-5">
        <div id="progress-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"
            data-gameid="<%= gameId %>" data-userid="<%= userName %>"></div>
    </div>
    <p id="time-remaining" class="mt-3">Time remaining: 15 minutes 0 seconds</p>
    <button class="btn btn-secondary mt-3" onclick="window.location.href='/games'">Back to Games</button>
    </div>

    <script src="/progressTracker/progress.js"></script>

    <script>
        const sounds = {
            ocean: { audio: new Audio('/sounds/ocean.mp3'), image: '/images/ocean.png' },
            rain: { audio: new Audio('/sounds/rain.mp3'), image: '/images/rain.png' },
            forest: { audio: new Audio('/sounds/forest.mp3'), image: '/images/forest.png' }
        };

        function changeSound(type) {
            // Change the background image
            document.getElementById('bgImage').style.backgroundImage = `url('${sounds[type].image}')`;

            // Stop all sounds
            Object.values(sounds).forEach(sound => sound.audio.pause());

            // Play the selected sound
            sounds[type].audio.play();
        }
    </script>
</body>
</html>


<!DOCTYPE html>
<html>
<head>
    <title>Positive Affirmations</title>
    <link rel="stylesheet" href="/gamesIndiv.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="mb-4">Positive Affirmations</h1>
        <p class="lead">Read and repeat these affirmations to improve your mental health.</p>
        <div id="affirmations" class="mt-4">
            <button class="btn btn-primary btn-lg mb-3" onclick="startAffirmations()">Start Affirmations</button>
            <div id="instruction" class="mt-3 font-weight-bold" style="font-size: 24px;"></div>
        </div>
        <!-- Progress Bar -->
        <div class="progress mt-5">
            <div id="progress-bar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"
                data-gameid="<%= gameId %>" data-userid="<%= userName %>"></div>
        </div>
        <p id="time-remaining" class="mt-3">Time remaining: 15 minutes 0 seconds</p>
        <button onclick="window.location.href='/games'">Back to Games</button>
    </div>
    
    <script src="/progressTracker/progress.js"></script>
    <!-- using inline JSON DATA -->
    <script>
        const affirmations = [
            'I am worthy of love and respect.',
            'I am strong and capable.',
            'I choose to be happy and positive.',
            'I am in control of my thoughts and emotions.',
            'I am growing and learning every day.'
        ];
        let affirmationIndex = 0;

        function startAffirmations() {
            affirmationIndex = 0;
            document.getElementById('instruction').innerText = affirmations[affirmationIndex];
            const intervalId = setInterval(() => {
                if (affirmationIndex < affirmations.length - 1) {
                    affirmationIndex++;
                    document.getElementById('instruction').innerText = affirmations[affirmationIndex];
                } else {
                    clearInterval(intervalId);
                }
            }, 5000);
        }
    </script>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>
