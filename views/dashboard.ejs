<!DOCTYPE html>
<html>
<head>
    <title></title>
    <!-- Link to styles in main.css in the public folder  -->
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/dashboardpage.css">
    <!-- Link to the Bootstrap CSS for styling the page -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
    crossorigin="anonymous">
    <!-- Link to the Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- For bootstrap javascript libraries for carousel -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</head>

<body class="main-home-page">
    <!-- Include the header -->
    <%- include('../utils/header') %>

    <div class="welcome-section">
        <h1>Welcome, <span><%= userName %></span>!</h1>
        <% if (completedActivities.length > 0) { %>
            <p>You have completed these activities: <span><%= completedActivities.join(', ') %></span></p>
        <% } else { %>
            <p>You have not completed any activities.</p>
        <% } %>
        <button onclick="location.href='/edit-profile'">Edit Profile</button>
    </div>
    
     <!-- New Section for Viewing Questionnaire Responses -->
     <div class="responses-section">
        <h2>View Past Questionnaire Responses</h2>
        
    </div>

    <div class="achievements-section">
        <h2>Achievements</h2>
        <div class="badges">
            <% achievements.forEach(function(achievement) { %>
                <div class="badge">
                    <img src="<%= achievement.badgeImage %>" alt="<%= achievement.name %>">
                    <p><%= achievement.name %></p>
                </div>
            <% }); %>
        </div>
    </div>
    

    <div class="progress-section">
        <h2>What is My Current Progress</h2>
        <% if (activities && activities.length > 0) { %>
            <% activities.forEach(function(activity) { %>
                <div class="activity">
                    <p><%= activity.name %></p>
                    <div class="progress-bar">
                        <div class="progress" style="width: <%= activity.progress %>"></div>
                    </div>
                    <p><%= activity.progress %>% complete</p>
                    <p>Status: <%= activity.completed ? 'Completed' : 'Incomplete' %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p>No current activities.</p>
        <% } %>
    </div>
    
    

    <div class="goals-section">
        <h2>My Goals</h2>
        <form action="/update-goals" method="post" class="mb-3">
            <textarea class="form-control mb-3" name="goals" placeholder="Enter your goals here..."><%= goalsText %></textarea>
            <button type="submit" class="btn btn-success">Update Goals</button>
        </form>

        <!-- Display the current goals -->
        <% if (goalsText && goalsText.trim().length > 0) { %>
            <div class="goals-display mb-3">
                <p><strong>Current Goals:</strong></p>
                <p><%= goalsText %></p>
            </div>
        <% } else { %>
            <p>No goals set yet.</p>
        <% } %>

    </div>
    

 <!-- Include the footer -->
 <%- include('../utils/footer') %>
</body>
</html>
